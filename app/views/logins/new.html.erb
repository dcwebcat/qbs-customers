<%= render 'shared/page_title', title: 'Login' %>

<div class="row">
    <div class="well col-md-4 col-md-offset-4">
        <%= form_tag '/login' do %>
            <%= label_tag :customer_number %>
            <%= text_field_tag :customer_number %>
            
            <%= label_tag :password %>
            <%= password_field_tag :password %>
            
            <%= submit_tag 'Login', class: 'btn btn-success btn-white-text' %>
            
        <% end %>
    </div>
</div>