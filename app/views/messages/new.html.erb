<div class="container">
  <h1>Request Support</h1>
  <hr/>
  <%= render 'shared/errors', obj: @message %>
  <div class="row">
    <div class="col-md-6 well col-md-offset-3">
      <%= form_for @message do |f| %>
       
        <%= f.label :name %>
        <%= f.text_field :name %>
      
        <%= f.label :phone %>
        <%= f.telephone_field :phone %>
      
        <%= f.label :email %>
        <%= f.email_field :email %>
    
        <%= f.label :content, "Your message" %>
        <%= f.text_area :content, rows: "10" %>
        
        <%= f.hidden_field(:current_user) %>
      
        <%= f.submit 'Send Support Request', class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>